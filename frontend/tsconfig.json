{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true
  },
  "include": ["src/**/*", "src/**/*.vue"]
}
